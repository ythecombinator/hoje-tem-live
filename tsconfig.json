{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017", "es2018", "es2019"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "components": ["src/components"],
      "hooks/*": ["src/hooks/*"],
      "hooks": ["src/hooks"],
      "utils/*": ["src/utils/*"],
      "utils": ["src/utils"],
      "schemas/*": ["src/schemas/*"],
      "schemas": ["src/schemas"],
      "services/*": ["src/services/*"],
      "services": ["src/services"],
      "styles/*": ["src/styles/*"],
      "styles": ["src/styles"],
      "config/*": ["src/config/*"],
      "config": ["src/config"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
